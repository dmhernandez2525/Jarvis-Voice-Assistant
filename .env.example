# Jarvis Voice Assistant - Environment Variables
# ==============================================
# Copy this file to .env and update values as needed.

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:72b
# For lower RAM systems, use smaller models:
# OLLAMA_MODEL=qwen2.5:7b
# OLLAMA_MODEL=llama3.2:3b

# Whisper Configuration
WHISPER_MODEL=large
# For faster performance (less accurate):
# WHISPER_MODEL=medium
# WHISPER_MODEL=small
# WHISPER_MODEL=base

# Text-to-Speech
TTS_ENGINE=pyttsx3
# TTS_ENGINE=coqui
TTS_RATE=175
TTS_VOICE=default

# Wake Word (Porcupine)
# Get free key at: https://console.picovoice.ai/
PORCUPINE_ACCESS_KEY=your-access-key-here
WAKE_WORD_SENSITIVITY=0.5

# Server Mode Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# Home Assistant Integration
HASS_URL=http://homeassistant.local:8123
HASS_TOKEN=your-long-lived-access-token

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
RECORDING_DURATION=5

# Context Manager
CONTEXT_FILE=~/.jarvis/context.json
NOTES_FILE=DANIEL_NOTES.md
